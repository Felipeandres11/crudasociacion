<p id="notice"><%= notice %></p>

<h1>Categories</h1>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Numero </th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @category.each do |category| %>
      <tr >
        <td class="py-3"><%= category.name %></td>
        <td><%= category.products.count %></td>

        <td><button type="button" class="btn btn-primary"><%= link_to 'Show', category %></button></td>
        <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_category_path(category) %></button></td>
        <td><button type="button" class="btn btn-danger"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

